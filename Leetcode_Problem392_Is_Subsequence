bool isSubsequence(char* s, char* t) {
    if(!strlen(s) && !strlen(t))
        return 1;
    for( int i = 0 , j = 0 ; j < strlen(t) ; j++)
    {
        i += s[i] == t[j] ? 1 : 0;
        if(i == strlen(s))
            return 1;
    }
    return 0; 
}


---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------


bool isSubsequence(char * s, char * t){
    int i = strlen(s) - 1 , j = strlen(t) - 1;
    while(i >= 0 && j >= 0) 
    {
        if(s[i] == t[j])
            i--;
        j--;
    }
    return !(i > -1);        
}


---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------


bool isSubsequence(char * s, char * t){
    while (*s && *t) 
        if (*s == *t++) 
            s++;
    return !(*s);
}
